
<section class="container" style="margin-top: 2rem;">
    <div class="row text-center">
        <h2 style="color: brown;">PRODUCTS</h2>
    </div>
    {{#if listExists}}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4">
        {{#each products}}
        <div class="col mb-4">
            <div class="card h-100">
                <img src="{{this.thumbnail}}" style="width: auto" class="card-img-top" alt="{{this.title}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text"><strong>Price:</strong> ${{this.price}}</p>
                    <p class="card-text"><strong>Stock:</strong> {{this.stock}}</p>
                    <button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Add to cart" data-id="{{this.id}}" onclick="addToCart(this)">Add to cart</i></button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <h4 class="alert alert-danger container">NO HAY PRODUCTOS</h4>
    {{/if}}

</section>
{{#if script}}
<script src="../scripts/{{script}}.js"></script>
{{/if}}